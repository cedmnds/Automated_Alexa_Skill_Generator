  .container-fluid.w-100.text-center(style='padding-top:20px;padding-bottom:0px')
    //-h1(style='margin-bottom: 20px')
    .card-deck
      .card.bg-warning
        .card-body.text-left
          h2.mb-0
            i.fas.fa-exclamation.mb-0(style='margin-right: 8px')
            | Requirements:
        .container-fluid.w-100.text-center(style='padding-top:0px;padding-bottom:10px; color: white')
          h1(style='margin-bottom: 0px')
          .card-deck
            .card(style="background-color:black;")
              .card-body.text-left
                p.mb-0
                  i.fas.fa-exclamation-circle.mb-0(style='margin-right: 8px')
                  | Have an Amazon Developer account created.
        .container-fluid.w-100.text-center(style='padding-top:0px;padding-bottom:20px; color: white')
          h1(style='margin-bottom: 0px')
          .card-deck
            .card(style="background-color:black;")
              .card-body.text-left
                p.mb-0
                  i.fas.fa-exclamation-circle.mb-0(style='margin-right: 8px')
                  | Have an AWS account created.
