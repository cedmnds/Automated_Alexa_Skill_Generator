extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up
        form(method='POST' action='/')
          div.form-group(style='color: red')
            label(for='name' style='color: red') Name
            input.form-control(type='text' id='name' placeholder='name' name='name')
          div.form-group
            label(for='username') Username
            input.form-control(type='text' id='username' placeholder='username' name='username')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          button.btn.btn-primary(type='submit') Sign Up