doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    ul
      li <a href="/">Home</a>
      li <a href="/signup">Sign Up</a>
      li <a href="/design">Design</a>
      li <a href="/about">About</a>

      if !signed_in
        <form action="/authenticate" method = "POST" >
          <p>
            name: <input type="text" name="name" value="" placeholder="Name"/>
            username: <input type="text" name="username" value="" placeholder="Username"/>
            email: <input type="text" name="email" value="" placeholder="E-mail"/>
            password: <input type="password" name="password" value="" placeholder="Password"/>
            <input type="submit" value="Log in"/>
          </p> 
          
        </form>  
      else
        <form action="/logout" method = "GET">
          <p>
          p Welcome #{username} 
            <input type="submit" value="Log out"/>
          </p>  
        </form>
  body
    block content
